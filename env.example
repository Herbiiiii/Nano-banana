# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nano_banana
POSTGRES_USER=nano_banana_user
# ВАЖНО: Измените пароль для продакшена!
POSTGRES_PASSWORD=nano_banana_pass

# MinIO
MINIO_ENDPOINT=localhost:9000
# ВАЖНО: Измените для продакшена!
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=nano-banana-images
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180
REFRESH_TOKEN_EXPIRE_DAYS=7
PWD_SCHEMES=bcrypt

# Replicate API (глобальный ключ, используется только если у пользователя нет своего ключа)
# Пользовательские ключи хранятся в БД, не в .env!
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Performance
MAX_WORKERS=3
MAX_CONCURRENT_GENERATIONS=3

# CORS (для продакшена укажите конкретные домены через запятую)
# Пример: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=*

# API URLs (для CSP политики)
API_URL=http://localhost:8000
MINIO_CONSOLE_URL=http://localhost:9001

